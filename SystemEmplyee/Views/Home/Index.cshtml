@model IEnumerable<SystemEmplyee.Models.EmployeeDbModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
          

            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
     
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="~/Images/@item.Photo" alt="Photo"
                             width="70" height="70"
                             class="rounded-circle border border-3 border-light shadow-sm" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
            <td>
                    @Html.ActionLink("Edit", "Update", new { id = item.Id }, new { @class= "btn btn-secondary btn-sm"}) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class="btn btn-info btn-sm"}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id}, new {
                    onclick = "return confirm('Are you sure you want to delete this employee?');",
                                @class = "btn btn-danger btn-sm"
                                })
            </td>
        </tr>
}
    </tbody>
</table>
